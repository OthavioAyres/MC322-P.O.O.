<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="lab03.EventoDetalhesController"
      alignment="CENTER" spacing="10" 
      styleClass="container" 
      prefWidth="600" prefHeight="400">
    
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>
    
    <Label fx:id="labelTituloEvento" style="-fx-font-size: 24px; -fx-font-weight: bold;" />
    
    <GridPane alignment="CENTER" hgap="10" vgap="10">
        <padding>
            <Insets top="20" right="20" bottom="20" left="20"/>
        </padding>
        
        <Label text="Data:" GridPane.columnIndex="0" GridPane.rowIndex="0" style="-fx-font-weight: bold;" />
        <Label fx:id="labelData" GridPane.columnIndex="1" GridPane.rowIndex="0" />
        
        <Label text="Local:" GridPane.columnIndex="0" GridPane.rowIndex="1" style="-fx-font-weight: bold;" />
        <Label fx:id="labelLocal" GridPane.columnIndex="1" GridPane.rowIndex="1" />
        
        <Label text="PreÃ§o:" GridPane.columnIndex="0" GridPane.rowIndex="2" style="-fx-font-weight: bold;" />
        <Label fx:id="labelPreco" GridPane.columnIndex="1" GridPane.rowIndex="2" />
        
        <Label text="Organizadora:" GridPane.columnIndex="0" GridPane.rowIndex="3" style="-fx-font-weight: bold;" />
        <Label fx:id="labelOrganizadora" GridPane.columnIndex="1" GridPane.rowIndex="3" />
        
        <Label text="Capacidade:" GridPane.columnIndex="0" GridPane.rowIndex="4" style="-fx-font-weight: bold;" />
        <Label fx:id="labelCapacidade" GridPane.columnIndex="1" GridPane.rowIndex="4" />
        
        <Label text="Ingressos vendidos:" GridPane.columnIndex="0" GridPane.rowIndex="5" style="-fx-font-weight: bold;" />
        <Label fx:id="labelIngressosVendidos" GridPane.columnIndex="1" GridPane.rowIndex="5" />
        
        <Label text="Detalhes:" GridPane.columnIndex="0" GridPane.rowIndex="6" style="-fx-font-weight: bold;" />
        <Label fx:id="labelDetalhes" GridPane.columnIndex="1" GridPane.rowIndex="6" wrapText="true" />
    </GridPane>
    
    <HBox alignment="CENTER" spacing="10">
        <Button text="Voltar" onAction="#onVoltar" />
    </HBox>
    
</VBox> 